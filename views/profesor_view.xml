<odoo>
  <data>

    <record model="ir.ui.view" id="convalidaciones_app.listado_profesores_tree">
      <field name="name">Listado de Profesor</field>
      <field name="model">convalidaciones_app.profesores_model</field>
      <field name="arch" type="xml">

        <tree>
          <field name="name" />
          <field name="apellidos" />
          <field name="dni" />
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="convalidaciones_app.profesores_model_form">
      <field name="name">Formulario de Profesores</field>
      <field name="model">convalidaciones_app.profesores_model</field>
      <field name="arch" type="xml">
        <form string="Nuevo Profesor">
          <sheet>
            <group name="Profesor">

              <label for="name" class="oe_edit_only" />
              <h1>
                <field name="name" />
              </h1>
              <field name="apellidos" />
              <field name="foto" widget="image" style="width: 120px; height: 150px;" />
              <field name="dni" />
              <field name="alumnos" />
            </group>
          </sheet>
        </form>
      </field>
    </record>


